{
    "name": "@runejs/login-server",
    "version": "1.1.0",
    "description": "RuneJS Game Login Server",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "start": "nodemon --max-old-space-size=1024 dist/main.js",
        "lint": "tslint --project tsconfig.json",
        "build:watch": "tsc --project tsconfig.json && babel ./src --out-dir dist --extensions \".ts,.tsx,.js\" --source-maps --watch",
        "build": "rimraf dist && tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/runejs/login-server.git"
    },
    "bugs": {
        "url": "https://github.com/runejs/login-server/issues"
    },
    "homepage": "https://github.com/runejs/login-server#readme",
    "author": "Tynarus",
    "license": "GPL-3.0",
    "dependencies": {
        "@runejs/core": "^1.3.2",
        "bcrypt": "^5.0.0",
        "bigi": "^1.4.2",
        "js-yaml": "^3.13.1",
        "source-map-support": "^0.5.19",
        "ts-node": "^9.1.1",
        "tslib": "^2.2.0",
        "typescript": "^4.2.4"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.1",
        "@babel/core": "^7.10.2",
        "@babel/node": "^7.12.1",
        "@babel/plugin-proposal-class-properties": "^7.10.1",
        "@babel/preset-env": "^7.10.2",
        "@babel/preset-typescript": "^7.10.1",
        "@types/js-yaml": "^3.12.1",
        "@types/node": "^12.20.7",
        "babel-plugin-module-resolver": "^4.0.0",
        "nodemon": "^2.0.6",
        "rimraf": "^3.0.2",
        "tslint": "^6.1.0"
    }
}
